" highlight on
set hlsearch
set ignorecase
set smartcase
set incsearch

" highlight off
nmap <silent> <Esc><Esc> :<C-u>nohlsearch<CR><Esc>

" enable virtual editing in rectangle visual mode
set virtualedit=block

" fold
set foldmethod=indent
set foldlevel=99

" wildmenu
set wildmenu wildoptions=pum
set wildignorecase

" no swap, backup, undo
set noswapfile
set nobackup
set noundofile

" vim help japanese
set helplang=ja,en

